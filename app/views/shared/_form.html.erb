
<%= form_with model: @applicant do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :contact %><br>
    <%= form.number_field :contact %>
  </div>

  <div>
    <%= form.label :age %><br>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :experience %><br>
    <%= form.number_field :experience %>
  </div>
  
  <div>
    <%= form.label :role %><br>
    <%= form.text_field :role %>
  </div>

  <div>
      <%#= form.label :skills %><br>
    <% Applicant::SKILLS.each do |skill| %>
      <%= form.check_box :skills, {multiple: true} , skill,nil %>
      <%= form.label skill %>
    <% end %>
  </div>

  <div>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :state %><br>
    <%= form.text_field :state %>
  </div>

  <div>
    <%= form.label :country %><br>
    <%= form.text_field :country %>
  </div>

  <div>
    <%= form.label :pincode %><br>
    <%= form.number_field :pincode %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>